@using PetShop.Web.MVC.Models.PetDto;
@model PetDtoCreate

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Breed" class="control-label"></label>
                <input asp-for="Breed" class="form-control" />
                <span asp-validation-for="Breed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalType" class="control-label"></label>
                <select asp-for="AnimalType" class="form-control">
                    @foreach (var animalType in Enum.GetValues(typeof(PetShop.Model.Enums.AnimalType))) {
                        <option value="@animalType">@animalType.ToString()</option>
                    }
                </select>
                <span asp-validation-for="AnimalType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetStatus" class="control-label"></label>
                <select asp-for="PetStatus" class="form-control">
            @foreach (var petStatus in Enum.GetValues(typeof(PetShop.Model.Enums.PetStatus))) {
                            <option value="@petStatus">@petStatus.ToString()</option>
            }
                </select>
                <span asp-validation-for="PetStatus" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Pet">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
